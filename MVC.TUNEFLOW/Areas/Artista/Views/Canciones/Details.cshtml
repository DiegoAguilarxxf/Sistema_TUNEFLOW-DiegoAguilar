@model Modelos.Tuneflow.Media.Song

@{
    Layout = "~/Areas/Artista/Views/Shared/_LayoutArtista.cshtml";
    ViewData["Title"] = "Detalles de la Canción";
}

<div class="container py-4">
    <h2 class="text-primary mb-4">🎵 Detalles de la Canción</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Título:</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Duración:</dt>
                <dd class="col-sm-8">@Model.TimeInMinutes(Model.Duration) min</dd>

                <dt class="col-sm-4">Género:</dt>
                <dd class="col-sm-8">@Model.Genre</dd>

                <dt class="col-sm-4">Álbum:</dt>
                <dd class="col-sm-8">
                    @(Model.Album != null ? Model.Album.Title : "Single")
                </dd>

                <dt class="col-sm-4">Explícito:</dt>
                <dd class="col-sm-8">
                    @(Model.ExplicitContent ? "Sí" : "No")
                </dd>

                <dt class="col-sm-4">Lanzamiento:</dt>
                <dd class="col-sm-8">@Model.ReleaseDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-4">Audio:</dt>
                <dd class="col-sm-8">
                    <audio controls style="width: 100%;">
                        <source src="@Model.FilePath" type="audio/mpeg" />
                        Tu navegador no soporta audio.
                    </audio>
                </dd>
            </dl>
        </div>

        <div class="col-md-6 text-center">
            <img src="@Model.ImagePath" alt="Portada" class="img-fluid rounded shadow" style="max-height: 300px;" />
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>