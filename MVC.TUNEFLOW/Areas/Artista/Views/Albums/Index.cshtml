@model IEnumerable<Modelos.Tuneflow.Playlists.Album>

@{
    Layout = "~/Areas/Artista/Views/Shared/_LayoutArtista.cshtml";
    ViewData["Title"] = "Mis Albums";
}

<div class="container">
    <h1>Mis Álbumes</h1>

    <p>
        <a href="/Artista/Albums/Create?artistaId=@ViewBag.ArtistaId" class="btn btn-primary btn-sm">Subir Album</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Fecha Lanzamiento</th>
                <th>Género</th>
                <th>Descripción</th>
                <th>Portada</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoverPath)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
