@model Modelos.Tuneflow.Media.Song

@{
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
	ViewData["Title"] = "Editar Contenido Explícito";
}

<div class="container py-5">
	<h1>Editar Contenido Explícito</h1>
	<hr />

	<div class="row">
		<div class="col-md-6">
			<form asp-action="Edit">
				@Html.AntiForgeryToken()
				<input type="hidden" asp-for="Id" />

				<div class="form-group">
					<label class="control-label">Título</label>
					<input class="form-control" value="@Model.Title" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Género</label>
					<input class="form-control" value="@Model.Genre" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Artista</label>
					<input class="form-control" value="@Model.Artist?.StageName" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Álbum</label>
					<input class="form-control" value="@Model.Album?.Title" readonly />

				</div>

				<div class="form-group">
					<label class="control-label">Archivo de Audio</label>
					<audio controls class="w-100 rounded shadow-sm mb-2">
						<source src="@Model.FilePath" type="audio/mpeg">
						Tu navegador no soporta el audio.
					</audio>
				</div>

				<div class="form-group">
					<label class="control-label">Portada</label><br />
					<img src="@Model.ImagePath" alt="Portada" class="img-fluid rounded shadow mb-2" style="max-width: 300px;" />

				</div>

				<div class="form-group">
					<label class="control-label">Fecha de lanzamiento</label>
					<input class="form-control" value="@Model.ReleaseDate.ToString("yyyy-MM-dd")" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Disponible</label>
					<input class="form-control" value="@(Model.Available ? "Sí" : "No")" readonly />
				</div>

				<div class="form-group form-check mt-4">
					<label class="switch-label dark-mode-labe">
						<input class="form-check-input" asp-for="ExplicitContent" />
						@Html.DisplayNameFor(model => model.ExplicitContent)
					</label>
				</div>

				<div class="form-group mt-4">
					<input type="submit" value="Guardar" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-secondary">Volver</a>
				</div>
			</form>
		</div>
	</div>
</div>
