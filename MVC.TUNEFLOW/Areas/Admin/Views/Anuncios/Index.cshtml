@model IEnumerable<Modelos.Tuneflow.Models.ADS>
@{
    ViewData["Title"] = "Anuncios";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="cuenta-contenedor">
    <h2>Anuncios</h2>
    <a class="btn btn-primary mb-3" asp-action="Subir">Subir nuevo anuncio</a>
    <div class="table-responsive">
        <table class="results-table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Duración</th>
                <th>Audio</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anuncio in Model)
            {
                    <tr>
                        <td>@anuncio.Title</td>
                        <td>@anuncio.TimeInMinutes(anuncio.Duration)</td>
                        <td><audio controls src="@anuncio.FilePath"></audio></td>
                        <td><img src="@anuncio.ImagePath" alt="Imagen" style="height:80px" /></td>
                        <td>
                        @* Acciones como editar o eliminar podrían agregarse aquí *@
                            <a asp-action="Delete" asp-route-id="@anuncio.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
    </div>
</div>