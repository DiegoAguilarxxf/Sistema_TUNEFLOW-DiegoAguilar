@model Modelos.Tuneflow.Models.ArtistVerificationRequest
@{
    ViewData["Title"] = "Eliminar Petición";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var artista = ViewBag.Artista as Modelos.Tuneflow.User.Production.Artist;
}

<h2 class="mb-4">🗑️ Eliminar Petición de Verificación</h2>

<div class="alert alert-warning">
    ¿Estás seguro que deseas eliminar esta petición de <strong>@artista?.StageName</strong>?
</div>

<div class="mb-3">
    <img src="@(artista?.Profile?.ProfileImage ?? "/img/default-profile.jpg")"
         class="rounded-circle"
         width="100"
         alt="Foto de perfil" />

    <p><strong>Artista:</strong> @artista?.StageName</p>
    <p><strong>Género:</strong> @artista?.MusicGenre</p>
    <p><strong>Fecha de petición:</strong> @Model.RequestDate.ToString("dd/MM/yyyy")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
