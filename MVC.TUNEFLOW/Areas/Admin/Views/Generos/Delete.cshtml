@model Modelos.Tuneflow.Models.Genre
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="cuenta-contenedor">
    <h2>Eliminar Género</h2>
    <p>¿Estás seguro que deseas eliminar el género <strong>@Model.Name</strong>?</p>

    <form asp-action="Delete" asp-controller="Generos" asp-area="Admin" method="post" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Generos", new { area = "Admin" })">Cancelar</a>
    </form>
</div>
