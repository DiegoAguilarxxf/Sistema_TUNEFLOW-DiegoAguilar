@model IEnumerable<Modelos.Tuneflow.Models.Genre>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="cuenta-contenedor">
    <h2>Lista de Géneros</h2>
    <a class="btn btn-primary mb-3" href="@Url.Action("Subir", "Generos", new { area = "Admin" })">Nuevo Género</a>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genero in Model)
            {
                <tr>
                    <td>@genero.Name</td>
                    <td>
                        <img src="@genero.FilePath" alt="Imagen" width="100" />
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Generos" asp-area="Admin" method="post" asp-route-id="@genero.Id" onsubmit="return confirm('¿Seguro de eliminar este género?');">
                            <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
