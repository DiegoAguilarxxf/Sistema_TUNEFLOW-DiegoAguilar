@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="cuenta-contenedor">
    <h2>Subir Nuevo Género</h2>

    <form asp-action="Subir" asp-controller="Generos" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Name">Nombre del Género</label>
            <input type="text" name="Name" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label for="archivoImagen">Imagen del Género</label>
            <input type="file" name="archivoImagen" accept="image/*" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success">Subir</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Generos", new { area = "Admin" })">Cancelar</a>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>
