@model Modelos.Tuneflow.User.Consumer.Client

@{
    ViewData["Title"] = "Editar cuenta";
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
}

<div class="cuenta-contenedor">
    <div class="cuenta-tarjeta">
        <h2 class="cuenta-titulo">✏️ Editar cuenta</h2>
        <hr />

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Nombres -->
            <div class="cuenta-item mb-3">
                <label class="cuenta-label" asp-for="FirstName">Nombre: </label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Apellidos -->
            <div class="cuenta-item mb-3">
                <label class="cuenta-label" asp-for="LastName">Apellido: </label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="cuenta-item mb-3">
                <label class="cuenta-label" asp-for="Email">Correo: </label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="cuenta-item mb-3">
                <label class="cuenta-label" asp-for="Phone">Celular: </label>
                <input asp-for="Phone" type="tel" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Fecha de nacimiento -->
            <div class="cuenta-item mb-3">
                <label class="cuenta-label" asp-for="BirthDate">Fecha cumpleaños: </label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <!-- Registro (solo lectura) -->
            <div class="cuenta-item mb-3">
                <label class="cuenta-label">Registrado el:</label>
                <input value="@Model.RegistrationDate.ToString("yyyy-MM-dd")" readonly class="form-control" />
            </div>

            <!-- Campos ocultos -->
            <input asp-for="Id" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="CountryId" type="hidden" />
            <input asp-for="SubscriptionId" type="hidden" />
            <input asp-for="AccountType" type="hidden" />
            <input asp-for="Password" type="hidden" />
            <input asp-for="IsActive" type="hidden" />

            <div class="cuenta-acciones mt-4">
                <button type="submit" class="btn btn-primary me-2">💾 Guardar cambios</button>
                <a asp-action="Details" class="btn btn-outline-secondary">↩️ Cancelar</a>
            </div>
        </form>
    </div>
</div>
