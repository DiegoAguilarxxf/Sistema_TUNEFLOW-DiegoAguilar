    function reproducirCancion(id) {
        console.log("Reproducir canción ID:", id);
        // lógica de reproducción
    }

    function reproducirPlaylist() {
        console.log("Reproducir toda la playlist");
        // lógica para reproducir la playlist
    }
</script>
